<% layout('layouts/boilerplate') %>
<% let count = 1; %> 
<div class="col-6 offset-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">File</th>
                <th scope="col">View</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% for(let csv of csvs) { %>
            <tr>
                <td><%= count++ %></td>
                <td><%= csv.fileName %></td>
                <td><a class="btn btn-primary" href="/client/select/<%=csv._id%>/">View</a></td>
                <td><form action="/client/select/<%=csv._id%>?_method=DELETE" method="POST"><button class="btn btn-danger">Delete</button></form></td>
            </tr>
            <% } %> 
        </tbody>
    </table>
</div>