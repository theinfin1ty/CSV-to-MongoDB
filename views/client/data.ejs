<% layout('layouts/boilerplate') %>
<% let count = 1; %> 
<div>
    <a class="btn btn-primary mb-3" href="/client/select/<%=fileId%>/new">Add New Entry</a>
    <div style="overflow:auto; height: 75vh;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <% for(let header of headers){ %> 
                    <th scope="col"><%= header %></th>
                    <% } %> 
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% for(let content of contents) {%>
                <tr>
                    <td><%= count++ %></td>
                    <% for(let header of headers){ %>      
                    <td><%= content[header] %></td>
                    <% } %>
                    <td><a class="btn btn-info" href="/client/select/<%=fileId%>/<%=content._id%>">Update</a></td>
                    <td>
                        <form action="/client/select/<%=fileId%>/<%=content._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %> 
            </tbody>
        </table>
    </div>
</div>